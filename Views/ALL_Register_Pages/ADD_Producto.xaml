<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TapPay.Views.ADD_producto"
             Title="Registrar un Nuevo Producto">
    <ScrollView>
        <StackLayout Padding="30"
                Spacing="30">

            <Entry Placeholder="Ingrese el Nombre del Producto"
                    x:Name="NombreEntry"/>

            <Entry Placeholder="Ingrese la Descripcion del Producto"
                    x:Name="descripcionEntry"/>

            <Entry Placeholder="Ingrese El Precio del Producto"
                    x:Name="precioEntry"/>



            <Button Text="Registrar Producto"
                    Clicked="OnProductoRegisterClicked"/>       
             
             <Button Text="Editar Producto"
                    Clicked="OnEditRegisterClicked"/>         

        </StackLayout>
    </ScrollView>
</ContentPage>